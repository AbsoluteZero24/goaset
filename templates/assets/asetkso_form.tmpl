{{ define "assets/asetkso_form" }}
<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h3 class="mb-0">{{ .title }}</h3>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/inventori/aset-laptop">Aset KSO</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ .title }}</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 mx-auto">
        <div class="card card-primary card-outline shadow-sm">
          <div class="card-header border-0 pb-0">
            <h3 class="card-title fw-bold">
              <i class="bi bi-box-seam me-2"></i>
              Manage Asset KSO
            </h3>
          </div>
          <form action="{{ if .asset }}/inventori/aset-laptop/update/{{ .asset.ID }}{{ else }}/inventori/aset-laptop{{ end }}" method="POST">
            <div class="card-body p-4">
              <input type="hidden" name="redirect_to" value="/inventori/aset-laptop">
              
              <div class="row">
                <!-- Data Identitas -->
                <div class="col-md-6 pe-md-4 border-end">
                  <h6 class="text-uppercase text-muted fw-bold small mb-4">Identitas Aset</h6>
                  <div class="mb-3">
                    <label for="inventory_number" class="form-label fw-semibold">No. Inventaris</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-tag"></i></span>
                      <input type="text" name="inventory_number" class="form-control" id="inventory_number" placeholder="Masukkan No. Inventaris" value="{{ if .asset }}{{ .asset.InventoryNumber }}{{ end }}" required>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="asset_name" class="form-label fw-semibold">Nama Aset</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-cpu"></i></span>
                      <input type="text" name="asset_name" class="form-control" id="asset_name" placeholder="Masukkan Nama Aset" value="{{ if .asset }}{{ .asset.AssetName }}{{ end }}" required>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="category" class="form-label fw-semibold">Kategori</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-folder2"></i></span>
                      <select name="category" class="form-select" id="category" required>
                        <option value="">-- Pilih Kategori --</option>
                        {{ range .categories }}
                        <option value="{{ .Name }}" {{ if $.asset }}{{ if eq $.asset.Category .Name }}selected{{ end }}{{ else }}{{ if eq $.category .Name }}selected{{ end }}{{ end }}>{{ .Name }}</option>
                        {{ end }}
                      </select>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="brand" class="form-label fw-semibold">Merk / Brand</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-patch-check"></i></span>
                      <input type="text" name="brand" class="form-control" id="brand" placeholder="Masukkan Merk" value="{{ if .asset }}{{ .asset.Brand }}{{ end }}">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="color" class="form-label fw-semibold">Warna</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-palette"></i></span>
                      <input type="text" name="color" class="form-control" id="color" placeholder="Masukkan Warna" value="{{ if .asset }}{{ .asset.Color }}{{ end }}">
                    </div>
                  </div>
                </div>

                <!-- Spesifikasi & Lokasi -->
                <div class="col-md-6 ps-md-4">
                  <h6 class="text-uppercase text-muted fw-bold small mb-4">Detail & Lokasi</h6>
                  <div class="mb-3">
                    <label for="specification" class="form-label fw-semibold">Spesifikasi</label>
                    <textarea name="specification" class="form-control" id="specification" rows="3" placeholder="Masukkan Spesifikasi">{{ if .asset }}{{ .asset.Specification }}{{ end }}</textarea>
                  </div>
                  <div class="mb-3">
                    <label for="location" class="form-label fw-semibold">Lokasi</label>
                    <div class="input-group">
                      <span class="input-group-text bg-light text-muted"><i class="bi bi-geo-alt"></i></span>
                      <input type="text" name="location" class="form-control" id="location" placeholder="Masukkan Lokasi" value="{{ if .asset }}{{ .asset.Location }}{{ end }}">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="purchase_date" class="form-label fw-semibold">Tanggal Pembelian</label>
                      <div class="input-group">
                        <span class="input-group-text bg-light text-muted"><i class="bi bi-calendar-event"></i></span>
                        <input type="text" name="purchase_date" class="form-control bg-white" id="purchase_date" value="{{ if .asset }}{{ .asset.PurchaseDate.Format "2006-01-02" }}{{ end }}" required placeholder="Pilih Tanggal">
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="status" class="form-label fw-semibold">Status Kondisi</label>
                      <div class="input-group">
                        <span class="input-group-text bg-light text-muted"><i class="bi bi-activity"></i></span>
                        <select name="status" class="form-select" id="status" required>
                          <option value="Ready" {{ if .asset }}{{ if eq .asset.Status "Ready" }}selected{{ end }}{{ end }}>Ready / Bagus</option>
                          <option value="Rusak" {{ if .asset }}{{ if eq .asset.Status "Rusak" }}selected{{ end }}{{ end }}>Rusak</option>
                          <option value="Hilang" {{ if .asset }}{{ if eq .asset.Status "Hilang" }}selected{{ end }}{{ end }}>Hilang</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4 d-flex gap-2">
              <button type="submit" class="btn btn-primary px-4 fw-semibold shadow-sm">
                <i class="bi bi-save me-1"></i> Simpan Aset
              </button>
              <a href="/inventori/aset-laptop" class="btn btn-outline-secondary px-4 fw-semibold">
                Batal
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dateInput = document.getElementById('purchase_date');
    const isEdit = dateInput.value !== "";
    
    flatpickr("#purchase_date", {
      dateFormat: "Y-m-d",
      defaultDate: isEdit ? dateInput.value : "today",
      allowInput: true
    });
  });
</script>
{{ end }}
