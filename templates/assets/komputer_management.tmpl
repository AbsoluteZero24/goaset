                          <td>{{ if $asset.User.Branch }}{{ $asset.User.Branch }}{{ else }}-{{ end }}</td>
                          <td>{{ if $asset.User.Position }}{{ $asset.User.Position }}{{ else }}-{{ end }}</td>
                          <td>
