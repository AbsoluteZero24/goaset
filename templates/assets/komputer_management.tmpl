                          <th>No. Inventaris</th>
                          <th>Nama Aset</th>
                          <th>Label</th>
                          <th>Nama</th>
                          <th>Cabang</th>
                          <th>Jabatan</th>
                          <th>Status Karyawan</th>
                          <th style="width: 60px">Aksi</th>
                        </tr>
