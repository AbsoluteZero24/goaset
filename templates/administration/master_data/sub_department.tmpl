{{ define "administration/master_data/sub_department" }}
<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6"><h3 class="mb-0">{{ .title }}</h3></div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Master Sub Bagian</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">{{ if .subDept }}Edit Sub Bagian{{ else }}Tambah Sub Bagian{{ end }}</h3>
          </div>
          <form action="{{ if .subDept }}/administration/master-data/sub-department/update/{{ .subDept.ID }}{{ else }}/administration/master-data/sub-department/store{{ end }}" method="POST">
            <div class="card-body">
              <div class="form-group mb-3">
                <label for="master_department_id">Bagian</label>
                <select name="master_department_id" class="form-control" id="master_department_id" required>
                  <option value="">-- Pilih Bagian --</option>
                  {{ range $dept := .departments }}
                  <option value="{{ $dept.ID }}" {{ if $.subDept }}{{ if eq $.subDept.MasterDepartmentID $dept.ID }}selected{{ end }}{{ end }}>{{ $dept.Name }}</option>
                  {{ end }}
                </select>
              </div>
              <div class="form-group">
                <label for="name">Nama Sub Bagian</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Masukkan nama sub bagian" value="{{ if .subDept }}{{ .subDept.Name }}{{ end }}" required>
              </div>
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Simpan</button>
              {{ if .subDept }}
              <a href="/administration/master-data/sub-department" class="btn btn-secondary">Batal</a>
              {{ end }}
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Daftar Sub Bagian</h3>
          </div>
          <div class="card-body p-0">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Bagian</th>
                  <th>Nama Sub Bagian</th>
                  <th style="width: 100px">Aksi</th>
                </tr>
              </thead>
              <tbody>
                {{ range $index, $sub := .subDepts }}
                <tr>
                  <td>{{ add $index 1 }}</td>
                  <td>{{ $sub.MasterDepartment.Name }}</td>
                  <td>{{ $sub.Name }}</td>
                  <td>
                    <div class="btn-group">
                      <a href="/administration/master-data/sub-department/edit/{{ $sub.ID }}" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <a href="/administration/master-data/sub-department/delete/{{ $sub.ID }}" class="btn btn-danger btn-sm" onclick="return confirm('Hapus data ini?')">
                        <i class="bi bi-trash"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                {{ end }}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ end }}
