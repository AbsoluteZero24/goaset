{{ define "administration/master_data/position" }}
<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6"><h3 class="mb-0">{{ .title }}</h3></div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Master Jabatan</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">{{ if .position }}Edit Jabatan{{ else }}Tambah Jabatan{{ end }}</h3>
          </div>
          <form action="{{ if .position }}/administration/master-data/position/update/{{ .position.ID }}{{ else }}/administration/master-data/position/store{{ end }}" method="POST">
            <div class="card-body">
              <div class="form-group">
                <label for="name">Nama Jabatan</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Masukkan nama jabatan" value="{{ if .position }}{{ .position.Name }}{{ end }}" required>
              </div>
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Simpan</button>
              {{ if .position }}
              <a href="/administration/master-data/position" class="btn btn-secondary">Batal</a>
              {{ end }}
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Daftar Jabatan</h3>
          </div>
          <div class="card-body p-0">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Nama Jabatan</th>
                  <th style="width: 100px">Aksi</th>
                </tr>
              </thead>
              <tbody>
                {{ range $index, $pos := .positions }}
                <tr>
                  <td>{{ add $index 1 }}</td>
                  <td>{{ $pos.Name }}</td>
                  <td>
                    <div class="btn-group">
                      <a href="/administration/master-data/position/edit/{{ $pos.ID }}" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <a href="/administration/master-data/position/delete/{{ $pos.ID }}" class="btn btn-danger btn-sm" onclick="return confirm('Hapus data ini?')">
                        <i class="bi bi-trash"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                {{ end }}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ end }}
